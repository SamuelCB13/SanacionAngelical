---
import { servicios } from "../data/servicios.js";
import Layout from "../layouts/Layout.astro";
import ArrowRightIcon from "../components/icons/ArrowRight.astro";
---

<Layout>
    <main
        class="flex items-center justify-center min-h-full pt-[10vh] w-full py-16 px-4 sm:px-6 lg:px-8"
        id="servicios"
    >
        <article class="w-full max-w-7xl">
            <section class="flex justify-center sm:justify-start max-sm:my-5">
                <a
                    href="/"
                    class="flex items-center justify-center gap-2 w-full sm:w-auto min-w-32 sm:min-w-48 text-pink-dark font-light border border-transparent border-t-pink-dark rounded-xl px-4 sm:px-5 py-2 sm:py-3 hover:border-pink-dark transition duration-300 bg-white"
                >
                    <ArrowRightIcon class="size-4 sm:size-5 rotate-y-180" />
                    Volver al inicio
                </a>
            </section>
            <section class="text-center space-y-6 mb-12">
                <p
                    class="inline-block border border-pink-light bg-white text-pink-dark px-3 py-1 rounded-full font-light"
                >
                    Mis Servicios
                </p>
                <h1
                    class="text-3xl sm:text-4xl md:text-5xl font-bold text-pink-dark"
                >
                    Conoce a detalle todos mis servicios
                </h1>
                <p class="text-gray max-w-5xl mx-auto max-sm:text-start">
                    Ofrezco una variedad de servicios terapéuticos diseñados
                    para ayudarte a encontrar equilibrio, sanación y crecimiento
                    personal.
                </p>
            </section>
            <section
                class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8"
            >
                {
                    servicios.map((servicio) => (
                        <div class="flex flex-col gap-5 border border-pink-light bg-white rounded-xl p-6 transform transition-all duration-300 hover:scale-[1.02] hover:shadow-lg">
                            <header class="flex items-center justify-between">
                                <h2 class="text-pink-dark text-lg sm:text-xl font-bold">
                                    {servicio.titulo}
                                </h2>
                                <servicio.icono class="size-6 sm:size-7 text-pink-dark bg-pink-light rounded-full p-1" />
                            </header>
                            <main class="flex-grow">
                                <p class="text-gray text-base">
                                    • {servicio.descripcion}
                                </p>
                                {servicio.descripcion2 && (
                                    <p class="text-gray text-base">
                                        • {servicio.descripcion2}
                                    </p>
                                )}
                            </main>
                        </div>
                    ))
                }
            </section>
        </article>
    </main>
</Layout>

<style>
    main {
        animation: slideUp 1s ease-out;
    }

    @keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(40px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
